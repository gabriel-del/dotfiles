export path="
/usr/local/sbin
/usr/local/bin
/usr/bin
/usr/lib/jvm/default/bin
/usr/bin/site_perl
/usr/bin/vendor_perl
/usr/bin/core_perl
$HOME/.bin
# $HOME/.yarn/bin
# $HOME/.go/bin
# $HOME/.config/yarn/global/node_modules/.bin
# $HOME/.cargo/bin
"
export GEM_HOME="$(ruby -e 'puts Gem.user_dir')"
export path="$(/bin/echo "$path" | /bin/sed 's/#.*$//' | /bin/sed '/^$/d' | /bin/sed 's/ //g' | /bin/tr '\n' ':')"

# SUDO
if [[ $(id -u) -eq 0 ]] ;then
  for i in yay trizen makepkg
  do
    alias "$i"="sudo -E -u sudo $i"
  done
else
  for i in btrfs waydroid libinput powerpill  reflector mkfs.btrfs  mkinitcpio docker locale-gen modprobe usermod lvs lvresize lvremove resize2fs  gpasswd  groupdel useradd killall vgs vgchange cryptsetup ego epro cfdisk etc-update shutdown genkernel blkid ip df iw lscpu uname rc-update su cryptsetup pm-suspend pkill fdisk pacman fdisk systemctl nmcli mount umount emerge reboot grub-mkconfig visudo pacman-key
    do
    alias "$i"="sudo -E $i"
  done
  fi

# Install
OS=$(cat /etc/os-release | grep ^ID= | cut -d= -f2-)
case $OS in
    artix|arch|garuda) 	alias i="pacman -S --noconfirm --overwrite \* --disable-download-timeout"
                  alias ir="pacman -Rsu --noconfirm"
                  alias iu="pacman -Sy && powerpill -Su && paru -Su"
# alias rmpkg="sudo pacman -Rdd"
# alias cleanup='sudo pacman -Rns (pacman -Qtdq)' # Cleanup orphaned packages
# alias fixpacman="sudo rm /var/lib/pacman/db.lck"
# alias upd='/usr/bin/garuda-update'
                   	# alias ii="paru -S" ;;
                   	alias ii="paru -S --nouseask" ;;
    funtoo)	alias i="emerge --autounmask --autounmask-write -v" ;;
    *) echo "$HOME/.aliases: Distribution not recognized" ;;
esac


