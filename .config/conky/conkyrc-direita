${offset 15}${color 00ffae}${top_mem name 1} ${alignr} ${top_mem mem 1}
${offset 15}${color 00ffae}${top_mem name 2} ${alignr} ${top_mem mem 2}
${offset 15}${color 00ffae}${top_mem name 3} ${alignr} ${top_mem mem 3}
${offset 15}${color 00ffae}${top_mem name 4} ${alignr} ${top_mem mem 4}
${offset 15}${color 00ffae}${top_mem name 5} ${alignr} ${top_mem mem 5}
${offset 15}${color 00ffae}${top_mem name 6} ${alignr} ${top_mem mem 6}

${offset 4}${color black}${memgraph ff0000 0000ff}
